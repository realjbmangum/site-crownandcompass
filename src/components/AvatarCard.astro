---
interface Props {
  headline: string;
  description: string;
  number: string;
}

const { headline, description, number } = Astro.props;
---

<div class="avatar-card">
  <div class="card-number" aria-hidden="true">{number}</div>
  <div class="card-rule" aria-hidden="true"></div>
  <h3 class="avatar-headline">{headline}</h3>
  <p class="avatar-description">{description}</p>
</div>

<style>
  .avatar-card {
    background-color: var(--bg-card);
    border: 1px solid var(--accent);
    outline: 1px solid rgba(201, 133, 58, 0.2);
    outline-offset: -6px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .card-number {
    font-family: 'EB Garamond', Georgia, serif;
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--accent);
    opacity: 0.35;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .card-rule {
    width: 1.5rem;
    height: 1px;
    background-color: var(--accent);
    opacity: 0.4;
  }

  .avatar-headline {
    font-family: 'EB Garamond', Georgia, serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
    margin: 0;
  }

  .avatar-description {
    font-family: 'DM Sans', system-ui, sans-serif;
    font-size: 0.9375rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin: 0;
    font-weight: 300;
  }
</style>
