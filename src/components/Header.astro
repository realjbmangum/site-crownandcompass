---
const navLinks = [
  { label: 'The Compass', href: '/compass' },
  { label: 'About', href: '/about' },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <div class="header-inner">
    <!-- Logo -->
    <a href="/" class="logo-link" aria-label="Crown and Compass — home">
      <!-- Compass rose mark — inline SVG, no white background -->
      <svg class="logo-mark" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <!-- Outer circle -->
        <circle cx="20" cy="20" r="18.5" stroke="currentColor" stroke-width="1.2"/>
        <!-- Cardinal points — N/S taller, E/W shorter -->
        <polygon points="20,4 22.2,18 20,20 17.8,18" fill="currentColor"/>
        <polygon points="20,36 17.8,22 20,20 22.2,22" fill="currentColor" opacity="0.55"/>
        <polygon points="36,20 22,17.8 20,20 22,22.2" fill="currentColor" opacity="0.55"/>
        <polygon points="4,20 18,22.2 20,20 18,17.8" fill="currentColor" opacity="0.55"/>
        <!-- Center dot -->
        <circle cx="20" cy="20" r="2.2" fill="currentColor"/>
        <!-- Inner ring -->
        <circle cx="20" cy="20" r="7" stroke="currentColor" stroke-width="0.8" opacity="0.35"/>
      </svg>
      <span class="logo-text">Crown &amp; Compass</span>
    </a>

    <!-- Desktop nav -->
    <nav class="main-nav" aria-label="Main navigation">
      <ul class="nav-list">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class={`nav-link ${currentPath === link.href ? 'nav-link--active' : ''}`}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li>
          <a href="/join" class="btn-amber nav-join">Join</a>
        </li>
      </ul>
    </nav>

    <!-- Mobile hamburger -->
    <button class="menu-toggle" id="menu-toggle" aria-label="Open menu" aria-expanded="false">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>

  <!-- Mobile nav drawer -->
  <div class="mobile-nav" id="mobile-nav" aria-hidden="true">
    <ul class="mobile-nav-list">
      {navLinks.map(link => (
        <li>
          <a href={link.href} class="mobile-nav-link">{link.label}</a>
        </li>
      ))}
      <li>
        <a href="/join" class="btn-amber mobile-join">Join a Chapter</a>
      </li>
    </ul>
  </div>
</header>

<script>
  const toggle = document.getElementById('menu-toggle') as HTMLButtonElement;
  const drawer = document.getElementById('mobile-nav') as HTMLDivElement;

  toggle.addEventListener('click', () => {
    const open = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!open));
    drawer.setAttribute('aria-hidden', String(open));
    toggle.classList.toggle('is-open', !open);
    drawer.classList.toggle('is-open', !open);
  });

  // Close on nav link click
  drawer.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      toggle.setAttribute('aria-expanded', 'false');
      drawer.setAttribute('aria-hidden', 'true');
      toggle.classList.remove('is-open');
      drawer.classList.remove('is-open');
    });
  });
</script>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: rgba(15, 17, 23, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--border);
    box-shadow: 0 1px 0 0 rgba(201, 133, 58, 0.15);
  }

  .header-inner {
    max-width: 68rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  /* Logo */
  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-mark {
    height: 28px;
    width: 28px;
    color: var(--accent);
    flex-shrink: 0;
  }

  .logo-text {
    font-family: 'EB Garamond', Georgia, serif;
    font-size: 1.1875rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: 0.04em;
  }

  /* Desktop nav */
  .main-nav {
    display: flex;
    align-items: center;
  }

  .nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-link {
    font-family: 'DM Sans', system-ui, sans-serif;
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--text-muted);
    padding: 0.375rem 0.875rem;
    transition: color 0.15s ease;
    text-decoration: none;
  }

  .nav-link:hover,
  .nav-link--active {
    color: var(--text-primary);
  }

  .nav-join {
    margin-left: 0.5rem;
    padding: 0.4375rem 1.125rem;
    font-size: 0.875rem;
  }

  /* Hamburger button */
  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    margin-right: -0.5rem;
  }

  .bar {
    display: block;
    width: 22px;
    height: 1.5px;
    background-color: var(--text-primary);
    transition: transform 0.2s ease, opacity 0.2s ease;
    transform-origin: center;
  }

  .menu-toggle.is-open .bar:nth-child(1) {
    transform: translateY(6.5px) rotate(45deg);
  }
  .menu-toggle.is-open .bar:nth-child(2) {
    opacity: 0;
  }
  .menu-toggle.is-open .bar:nth-child(3) {
    transform: translateY(-6.5px) rotate(-45deg);
  }

  /* Mobile nav drawer */
  .mobile-nav {
    display: none;
    background-color: rgba(15, 17, 23, 0.98);
    border-top: 1px solid var(--border);
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s ease, padding 0.25s ease;
  }

  .mobile-nav.is-open {
    max-height: 400px;
    padding: 1.5rem;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .mobile-nav-link {
    display: block;
    font-family: 'EB Garamond', Georgia, serif;
    font-size: 1.375rem;
    font-weight: 500;
    color: var(--text-muted);
    padding: 0.625rem 0;
    border-bottom: 1px solid var(--border);
    transition: color 0.15s ease;
    text-decoration: none;
  }

  .mobile-nav-link:hover {
    color: var(--text-primary);
  }

  .mobile-join {
    margin-top: 1rem;
    width: 100%;
    text-align: center;
    display: block;
    padding: 0.75rem 1.5rem;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .logo-text {
      display: none;
    }

    .main-nav {
      display: none;
    }

    .menu-toggle {
      display: flex;
    }

    .mobile-nav {
      display: block;
    }
  }
</style>
